<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_template_form_inherit_electricity_contract" model="ir.ui.view">
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']/.." position="inside">
                    <page string="Electricity" name="electricity">
                        <group>
                            <group string="Contract infos">
                                <field name="electricity_contract_id"/>
                                <label for="price_elec_contract"/>
                                <div name="price_uom_contract">
                                    <field name="price_elec_contract" class="oe_inline" widget='monetary'/>
                                    <span groups="uom.group_uom">
                                        <span style="margin-right: 5px; margin-left: 5px;">per</span>
                                        <field name="contract_uom" class="oe_inline"/>
                                    </span>
                                </div> 
                            </group>

                            <group string="product infos">
                                <label for="additional_consumption" 
                                       attrs="{'invisible':[('include_in_product_consumption','=', False)]}"/>
                                <label for="additional_consumption" 
                                       string="Consumption"
                                       attrs="{'invisible':[('include_in_product_consumption','=', True)]}"/>
                                <div name="additional_consumption_uom">
                                    <field name="additional_consumption" class="oe_inline"/>
                                    <span groups="uom.group_uom">
                                        <field name="electricity_uom" 
                                               class="oe_inline" 
                                               style="margin-left: 5px;"/>
                                    </span>
                                </div>
                                <label for="electricity_consumption" 
                                       attrs="{'invisible':[('include_in_product_consumption','=', False)]}"
                                       string="Total Consumption"/>
                                <div name="consumption_uom" attrs="{'invisible':[('include_in_product_consumption','=', False)]}">
                                    <field name="electricity_consumption" class="oe_inline" />
                                    <span groups="uom.group_uom">
                                        <field name="electricity_uom" 
                                               class="oe_inline" 
                                               style="margin-left: 5px;"
                                               readonly="1"/>
                                    </span>
                                </div>
                                <field name="electricity_cost" string="Consumption's Cost"/>
                                <field name="cost_with_elec" string="Cost of product with electricity's cost"/>
                            </group>

                            <group string="Infos from BOM" attrs="{'invisible':[('bom_count','=', 0)]}">
                                <field name="bom_count" invisible="1"/>
                                <label for="electricity_consumption_from_bom" string="Consumption"/>
                                <div name="consumption_bom_uom">
                                    <field name="electricity_consumption_from_bom" class="oe_inline"/>
                                    <span groups="uom.group_uom">
                                        <field name="electricity_uom" class="oe_inline" style="margin-left: 5px;" readonly="1"/>
                                    </span>
                                </div>
                                <field name="electricity_cost_from_bom" string="Consumption's cost"/>
                                <field name="include_in_product_consumption" 
                                       widget="boolean_toggle" 
                                       string="Incule into the product's consumption"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
