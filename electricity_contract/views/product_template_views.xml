<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_template_form_inherit_electricity_contract" model="ir.ui.view">
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']/.." position="inside">
                    <page string="Electricity" name="electricity">
                        <group>
                            <group string="Contract infos">
                                <field name="electricity_contract_id"/>
                                <field name="price_elec"/>
                            </group>
                            <group string="product infos">
                                <field name="electricity_consumption"/>
                                <field name="electricity_cost"/>
                                <field name="cost_with_elec"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
